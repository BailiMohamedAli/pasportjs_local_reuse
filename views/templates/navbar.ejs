<div class="w3-top w3-bar w3-white w3-wide w3-padding w3-card">
  <a
    href="http://www.passportjs.org/packages/passport-local/"
    class="w3-bar-item w3-button"
    ><b>P</b>assport.js <span>Local Strategy</span></a
  >
  <!-- Float links to the right. Hide them on small screens -->
  <div class="w3-right">
    <% if (nav.local === 'home') { %>
    <a href="/register" class="w3-bar-item w3-button">Register</a>
    <a href="/login" class="w3-bar-item w3-button">Login</a>
    <% } %> 
    <% if (nav.local === 'register') { %>
    <a href="/" class="w3-bar-item w3-button">Home</a>
    <a href="/login" class="w3-bar-item w3-button">Login</a>
    <% } %> 
    <% if (nav.local === 'login') { %>
    <a href="/" class="w3-bar-item w3-button">Home</a>
    <a href="/register" class="w3-bar-item w3-button">Register</a>
    <% } %> 
    <% if (nav.local === 'loginok') { %>
    <a href="/" class="w3-bar-item w3-button">Home</a>
    <a href="/logout" class="w3-bar-item w3-button">Logout</a>
    <% } %>
    <% if (nav.local === 'loginfail') { %>
      <a href="/" class="w3-bar-item w3-button">Home</a>
      <a href="/register" class="w3-bar-item w3-button">Register</a>
      <a href="/login" class="w3-bar-item w3-button">Login</a>
    <% } %>
  </div>
</div>

