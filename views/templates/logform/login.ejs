    <div class="w3-container w3-teal">
      <h2>Login</h2>
    </div>

    <form class="w3-container form_margin" method="post" action="/user/login">
      <label class="w3-text-teal form_margin"><b>Email</b></label>
      <input
        class="w3-input w3-border w3-light-grey form_margin"
        type="text"
        name="email"
        placeholder="Email adress"
      />

      <label class="w3-text-teal form_margin"><b>Password</b></label>
      <input
        class="w3-input w3-border w3-light-grey form_margin"
        type="password"
        name="password"
        placeholder="Password"
      />
      <input class="w3-btn w3-teal form_margin" type="submit" value="Login" />
    </form>
  </div>
</div>
